extends ../layout

//- Get a content from layout page
block body_Content

    //- get header from partials directory
    include ../partials/header
    +header 


    //- get inscription page from inscrition directory
    if registration_type === 'email'
        include components/formulaire
        +formulaire_component
    else
        include components/inscription
        +inscription_component


    //- get footer from partials directory
    include ../partials/footer
    +footer